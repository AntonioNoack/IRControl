<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/background">

    <include layout="@layout/controls"/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Wait For Color" />

    <View
        android:layout_marginTop="5dp"
        android:id="@+id/colorId0"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#000"/>

    <View
        android:layout_marginTop="5dp"
        android:id="@+id/colorId1"
        android:layout_marginLeft="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#000"/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/numCallsId1"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:background="#f55"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:textSize="20sp"
        android:text="7" />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/numCallsId2"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:background="#f55"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:textSize="20sp"
        android:text="3" />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/duration"
        android:layout_marginLeft="10dp"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:background="#5cf"
        android:gravity="center"
        android:text="1s"
        android:clickable="true"
        android:focusable="true"
        android:textSize="20sp"
        android:textColor="@color/black" />

    <include layout="@layout/controls2"/>

</LinearLayout>